<div class = "container">
    <h1>タスクの追加</h1>
    <%= form_with model: @todo, local:true do |f| %>
    <%= f.label :title %>
    <br>
    <%= f.text_field :title, placeholder: "タスクを入力する" %>
    <br>
    <%= f.label :introduction %>
    <br>
    <%= f.text_area :introduction, placeholder: "詳細を入力する" %>
    <br>
    <input type = "submit" value = "保存する">
    <% end %>
    <%= link_to '一覧に戻る', todos_path, class: "back" %>
</div>