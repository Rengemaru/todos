<div class = "container">
    <h1>Todo List</h1>

    <%= link_to "タスクを追加する", new_todo_path, class:"new-task"%>

    <ol>
        <% @todos.each do |todo| %>
        <li>
            <input type="checkbox" <%= todo.checkbox %> class="check">
            <span>
                <%= todo.title %> <%= todo.introduction%>
            </span>
            <div>
                <%= link_to "編集", edit_todo_path(todo), class: "edit" %> 
                <%= button_to "削除", todo_path(todo), method: :delete , class: "delete" %>
            </div>
        <% end %>
    </ol>
</div>