<div class = "container">
    <h1>タスクの編集</h1>
    <div class = "form">
        <%= form_with model: @todo, local: true do |f| %>
            <div class = "title">
                <%= f.label :title, class: "title_label" %>
                <br>
                <%= f.text_field :title, placeholder: "タスクを入力する", class: "title_text" %>
            </div>
            <div class = "introduction">
                <%= f.label :introduction, class: "introduction_label" %>
                <br>
                <%= f.text_area :introduction, placeholder: "詳細を入力する", class: "introduction_text" %>
            </div>
            <div class = "date">
                <%= f.label :date, class: "date_label" %>
                <br>
                <%= f.date_field :date, class: "date_text" %>
            </div>
            <input type = "submit" value = "保存する">
        <% end %>
        <%= link_to '一覧に戻る', todos_path, class: "back"%>
    </div>
</div>